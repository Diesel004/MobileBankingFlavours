<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/textColorPrimary"
                android:orientation="horizontal"
                android:padding="15dp">

                <ImageView
                    android:id="@+id/cancelDialogue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:contentDescription="@string/app_name"
                    android:padding="5dp"
                    android:src="@drawable/back_arrow_left" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/transactionStatusId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/text_18sp"
                        android:textStyle="bold"
                        android:typeface="serif" />

                    <TextView
                        android:id="@+id/transactionDateId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:text="dddd"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/text_12sp"
                        android:typeface="serif" />

                </LinearLayout>

            </LinearLayout>

            <!--  <androidx.cardview.widget.CardView
                  android:id="@+id/cardView"
                  android:layout_width="fill_parent"
                  android:layout_height="match_parent"
                  android:layout_marginTop="10dp"
                  card_view:cardCornerRadius="3dp"
                  card_view:cardElevation="3dp"
                  card_view:cardUseCompatPadding="true">-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    card_view:cardCornerRadius="3dp"
                    card_view:cardElevation="3dp"
                    card_view:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Transaction Ref. No. :"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_14sp" />

                        <TextView
                            android:id="@+id/rrnNoTextViewId"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="?attr/textColour"
                            android:layout_marginLeft="20dp"
                            android:textSize="@dimen/text_18sp"
                            android:text=" ajhfdasfadjfg"
                            android:textStyle="bold" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    card_view:cardCornerRadius="3dp"
                    card_view:cardElevation="3dp"
                    card_view:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Transaction Type      : "
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_14sp" />

                        <TextView
                            android:id="@+id/tranTypeTextViewId"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="?attr/textColour"
                            android:layout_marginLeft="20dp"
                            android:textSize="@dimen/text_18sp"
                            android:text=" ajhfdasfadjfg"
                            android:textStyle="bold" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    card_view:cardCornerRadius="3dp"
                    card_view:cardElevation="3dp"
                    card_view:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Paid To"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_14sp" />

                        <TextView
                            android:id="@+id/benNameTextViewId"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="7dp"
                            android:textColor="?attr/textColour"
                            android:textSize="@dimen/text_16sp"
                            android:text=" ajhfdasfadjfg"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/benAccountNoTextViewId"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text=" ajhfdasfadjfg"
                            android:textColor="?attr/textColour"
                            android:textSize="@dimen/text_16sp" />

                        <TextView
                            android:id="@+id/benIFSCCodeTextViewId"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text=" ajhfdasfadjfg"
                            android:textColor="?attr/textColour"
                            android:textSize="@dimen/text_16sp" />

                        <TextView
                            android:id="@+id/benMobileNoTextViewId"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:textColor="?attr/textColour"
                            android:textSize="@dimen/text_16sp" />

                        <TextView
                            android:id="@+id/MMIDTextViewId"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:textColor="?attr/textColour"
                            android:textSize="@dimen/text_16sp" />



                    </LinearLayout>

                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    card_view:cardCornerRadius="3dp"
                    card_view:cardElevation="3dp"
                    card_view:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Transaction Amount"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_14sp" />

                        <TextView
                            android:id="@+id/AmountTextViewId"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="7dp"
                            android:textColor="?attr/textColour"
                            android:textSize="@dimen/text_20sp"
                            android:text=" ajhfdasfadjfg"
                            android:textStyle="bold" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:id="@+id/cardMobileId"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    card_view:cardCornerRadius="3dp"
                    card_view:cardElevation="3dp"
                    card_view:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Debited From"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_14sp" />

                        <TextView
                            android:id="@+id/benRemmitterAccNameTextViewId"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="7dp"
                            android:textColor="?attr/textColour"
                            android:textSize="@dimen/text_18sp"
                            android:text=" ajhfdasfadjfg"
                            android:textStyle="bold" />

                          <TextView
                              android:id="@+id/benRemmitterAccNoextViewId"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:layout_marginTop="5dp"
                              android:text=" ajhfdasfadjfg"
                              android:textColor="?attr/textColour"
                              android:textSize="@dimen/text_14sp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>


            <!--            </androidx.cardview.widget.CardView>-->

            <!--        </androidx.core.widget.NestedScrollView>-->

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>