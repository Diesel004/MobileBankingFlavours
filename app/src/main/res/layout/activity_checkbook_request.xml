<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        card_view:cardCornerRadius="2dp"
        card_view:cardElevation="3dp"
        card_view:cardUseCompatPadding="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="1dp"
                android:paddingRight="1dp"
                android:text="@string/title_select_acc"
                android:textSize="@dimen/text_16sp"
                android:typeface="serif" />


            <Spinner
                android:id="@+id/selectAccSpinnerId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/spinner_border"
                android:padding="15dp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingLeft="1dp"
                android:paddingRight="1dp"
                android:text="@string/txt_no_of_checkbook"
                android:textSize="@dimen/text_16sp"
                android:typeface="serif" />


            <Spinner
                android:id="@+id/checkbookqueSpinnerId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/spinner_border"
                android:padding="15dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingLeft="1dp"
                android:paddingRight="1dp"
                android:text="@string/txt_leaf_count"
                android:textSize="@dimen/text_16sp"
                android:typeface="serif" />


            <Spinner
                android:id="@+id/leafCountSpinnerId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/spinner_border"
                android:padding="15dp"  />


            <LinearLayout
                android:id="@+id/linearChequeTypeId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="1dp"
                    android:paddingRight="1dp"
                    android:text="@string/txt_cheque_type"
                    android:textSize="@dimen/text_16sp"
                    android:typeface="serif" />


                <Spinner
                    android:id="@+id/chequeTypeSpinnerId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/spinner_border"
                    android:padding="15dp"  />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingLeft="1dp"
                android:paddingRight="1dp"
                android:text="@string/hint_remarks"
                android:textSize="@dimen/text_16sp"
                android:typeface="serif" />



            <EditText
                android:id="@+id/remarkEditId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/edit_text_border"
                android:entries="@array/leaf_count"
                android:hint="@string/hint_remarks"
                android:maxLength="@integer/remark_lenght"
                android:padding="10dp" />


            <Button
                android:id="@+id/btnRequestSendId"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="16dp"
                android:background="?attr/textColorPrimary"
                android:text="@string/btn_send"
                android:textAllCaps="true"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/text_14sp"
                android:textStyle="bold"
                android:typeface="serif" />

        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>
