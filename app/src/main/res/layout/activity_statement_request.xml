<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        card_view:cardCornerRadius="2dp"
        card_view:cardElevation="3dp"
        card_view:cardUseCompatPadding="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="1dp"
                android:paddingRight="1dp"
                android:text="@string/txt_acc_no"
                android:textSize="@dimen/text_16sp"
                android:typeface="serif" />


            <Spinner
                android:id="@+id/selectAccSpinnerId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/spinner_border"
                android:padding="10dp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="1dp"
                android:paddingRight="1dp"
                android:layout_marginTop="12dp"
                android:text="@string/txt_from_date"
                android:textSize="@dimen/text_16sp"
                android:typeface="serif" />



            <TextView
                android:id="@+id/txtFrmDateId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_border"
                android:drawableRight="@drawable/ic_arrow_drop_down_black_24dp"
                android:drawableEnd="@drawable/ic_arrow_drop_down_black_24dp"
                android:layout_marginTop="5dp"
                android:paddingBottom="10dp"
                android:paddingLeft="18dp"
                android:paddingTop="10dp"
                android:textColor="@color/black"
                android:textSize="@dimen/text_14sp"
                android:typeface="serif" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="1dp"
                android:paddingRight="1dp"
                android:layout_marginTop="12dp"
                android:text="@string/txt_to_date"
                android:textSize="@dimen/text_16sp"
                android:typeface="serif" />


            <TextView
                android:id="@+id/txtToDateId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_border"
                android:layout_marginTop="5dp"
                android:paddingBottom="10dp"
                android:paddingLeft="18dp"
                android:paddingRight="3dp"
                android:drawableRight="@drawable/ic_arrow_drop_down_black_24dp"
                android:drawableEnd="@drawable/ic_arrow_drop_down_black_24dp"
                android:paddingTop="10dp"
                android:textColor="@color/black"
                android:textSize="@dimen/text_14sp"
                android:typeface="serif" />


            <Button
                android:id="@+id/btnLoginId"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="16dp"
                android:background="?attr/textColorPrimary"
                android:text="@string/btn_send"
                android:textAllCaps="true"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:textSize="@dimen/text_14sp"
                android:typeface="serif" />



        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>
